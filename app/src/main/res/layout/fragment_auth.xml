<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".auth.AuthWelcomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/auth_background1_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/login_pic1" />

            <TextView
                android:id="@+id/auth_welcome_tv"
                android:layout_width="380dp"
                android:layout_height="91dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="-20dp"
                android:alpha="0.8"
                android:fontFamily="@font/mayaregular"
                android:text="Welcome"
                android:textColor="#FFFFFF"
                android:textSize="81dp"
                app:layout_constraintEnd_toEndOf="@id/auth_background2_iv"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/auth_background2_iv"
                app:layout_constraintTop_toTopOf="@+id/auth_background2_iv" />

            <TextView
                android:id="@+id/auth_aboard_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="83dp"
                android:layout_marginTop="-20dp"
                android:alpha="0.8"
                android:fontFamily="@font/mayaregular"
                android:text="aboard"
                android:textColor="#FFFFFF"
                android:textSize="45sp"
                app:layout_constraintEnd_toEndOf="@+id/auth_welcome_tv"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/auth_welcome_tv"
                app:layout_constraintTop_toBottomOf="@+id/auth_welcome_tv" />

            <ImageView
                android:id="@+id/auth_background2_iv"
                android:layout_width="493dp"
                android:layout_height="751dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/login_pic2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/auth_cardLayout_cl"
                android:transitionName=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="260dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/auth_aboard_tv"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/auth_card_iv"
                    android:layout_width="317dp"
                    android:layout_height="273dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/signup_card5" />

                <Button
                    android:id="@+id/auth_login_bttn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="190dp"
                    android:fontFamily="@font/mayaregular"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    app:cornerRadius="13dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/auth_card_iv"
                    app:layout_constraintTop_toTopOf="@+id/auth_card_iv"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/auth_signup_bttn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:layout_marginEnd="40dp"
                    android:backgroundTint="#AE313F"
                    android:fontFamily="@font/mayaregular"
                    android:text="Sign Up"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    app:cornerRadius="13dp"
                    app:layout_constraintBottom_toBottomOf="@+id/auth_card_iv"
                    app:layout_constraintEnd_toEndOf="@+id/auth_card_iv"
                    app:layout_constraintTop_toTopOf="@+id/auth_card_iv"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
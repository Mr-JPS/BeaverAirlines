<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/passportView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CD19191A">

    <androidx.cardview.widget.CardView
        android:id="@+id/passportCARD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_passportInside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/newpassportinside" />

            <TextView
                android:id="@+id/tv_pasCountry"
                android:layout_width="43dp"
                android:layout_height="15dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:fontFamily="@font/gotic"
                android:hint="CC"
                android:inputType="textPersonName"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:singleLine="false"
                android:textColor="@color/purple_700"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_pasSurname"
                app:layout_constraintStart_toStartOf="@+id/tv_pasSurname"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tv_pasPassportNbr1"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="78dp"
                android:layout_marginBottom="18dp"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:fontFamily="@font/gotic"
                android:hint="B05X0003B0B "
                android:inputType="textPersonName"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:singleLine="false"
                android:textColor="@color/purple_700"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tv_pasSurname"
                app:layout_constraintStart_toEndOf="@+id/tv_pasCountry"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tv_pasSurname"
                android:layout_width="202dp"
                android:layout_height="18dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="383dp"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:fontFamily="@font/gotic"
                android:hint="Enter your Surname"
                android:inputType="textPersonName"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:singleLine="false"
                android:textColor="@color/purple_700"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_passportInside"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tv_pasName"
                android:layout_width="202dp"
                android:layout_height="18dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:fontFamily="@font/gotic"
                android:hint="Enter your Given Name"
                android:inputType="textPersonName"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:singleLine="false"
                android:textColor="@color/purple_700"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/tv_pasSurname"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_pasSurname"
                app:layout_constraintTop_toBottomOf="@+id/tv_pasSurname"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tv_pasNationality"
                android:layout_width="84dp"
                android:layout_height="17dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:fontFamily="@font/gotic"
                android:hint="Nationality"
                android:inputType="textPersonName"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:singleLine="false"
                android:textColor="@color/purple_700"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_pasName"
                app:layout_constraintTop_toBottomOf="@+id/tv_pasName"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tv_pasBirthday"
                android:layout_width="84dp"
                android:layout_height="17dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:fontFamily="@font/gotic"
                android:hint="YYYY/MM/DD"
                android:inputType="textPersonName"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:singleLine="false"
                android:textColor="@color/purple_700"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_pasNationality"
                app:layout_constraintTop_toBottomOf="@+id/tv_pasNationality"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tv_pasBirthCity"
                android:layout_width="84dp"
                android:layout_height="17dp"
                android:layout_marginStart="37dp"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:fontFamily="@font/gotic"
                android:hint="City"
                android:inputType="textPersonName"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:singleLine="false"
                android:textColor="@color/purple_700"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_pasBirthday"
                app:layout_constraintStart_toEndOf="@+id/tv_pasBirthday"
                app:layout_constraintTop_toTopOf="@+id/tv_pasBirthday"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/tv_pasGender"
                android:layout_width="43dp"
                android:layout_height="15dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:fontFamily="@font/gotic"
                android:hint="F/M/D"
                android:inputType="textPersonName"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:singleLine="false"
                android:textColor="@color/purple_700"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_pasBirthday"
                app:layout_constraintTop_toBottomOf="@+id/tv_pasBirthday"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/iv_visaStamp"
                android:layout_width="304dp"
                android:layout_height="236dp"
                android:adjustViewBounds="true"
                app:layout_constraintBottom_toBottomOf="@+id/iv_passportInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/iv_passportInside"
                app:layout_constraintTop_toTopOf="@+id/iv_passportInside"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/visastamp" />

            <TextView
                android:id="@+id/tv_pasPassportNbr2"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_marginStart="-50dp"
                android:layout_marginTop="70dp"
                android:alpha="0.6"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:fontFamily="@font/gotic"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:rotation="-90"
                android:singleLine="false"
                android:textColor="@color/purple_700"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_passportInside"
                tools:ignore="TouchTargetSizeCheck"
                tools:text="B05X0003B0B " />

            <TextView
                android:id="@+id/tv_pasPassportFoot"
                android:layout_width="296dp"
                android:layout_height="28dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:alpha="0.6"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:fontFamily="@font/gotic"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:singleLine="false"
                android:textColor="@color/purple_700"
                android:textSize="9sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/tv_pasBirthCity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_pasGender"
                tools:ignore="TouchTargetSizeCheck"
                tools:text="***B05X0003B0B***SURNAME***GIVENNAME*******************************************************************************************************" />

            <Button
                android:id="@+id/Pass_bttn_Close"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/purple_700"
                android:fontFamily="@font/mayaregular"
                android:text="close"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:iconTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_passportInside"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                tools:ignore="TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
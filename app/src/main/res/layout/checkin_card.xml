<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="82dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_checkinCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="3dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/checkincard51" />

            <TextView
                android:id="@+id/tv_checkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:fontFamily="@font/mayaregular"
                android:text="Check-In"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_checkinCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_checkinCard" />

            <TextView
                android:id="@+id/tv_checkin2"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:fontFamily="@font/gotic"
                android:text="Fast Track"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_checkin"
                app:layout_constraintEnd_toStartOf="@+id/iv_whiteLine"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/iv_checkinCard"
                app:layout_constraintTop_toTopOf="@+id/tv_checkin" />

            <ImageView
                android:id="@+id/iv_whiteLine"
                android:layout_width="17dp"
                android:layout_height="25dp"
                android:layout_marginEnd="-2dp"
                android:adjustViewBounds="true"
                android:alpha="0.8"
                app:layout_constraintBottom_toBottomOf="@+id/tv_checkin"
                app:layout_constraintEnd_toStartOf="@+id/tv_checkin"
                app:layout_constraintTop_toTopOf="@+id/tv_checkin"
                app:srcCompat="@drawable/whiteline" />

            <ImageView
                android:id="@+id/iv_seatIcon"
                android:layout_width="24dp"
                android:layout_height="22dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_checkin"
                app:layout_constraintEnd_toEndOf="@+id/iv_checkinCard"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toEndOf="@+id/tv_checkin"
                app:layout_constraintTop_toTopOf="@+id/tv_checkin"
                app:srcCompat="@drawable/ic_baseline_airline_seat_recline_extra_24" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="21dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_seatIcon"
                app:layout_constraintStart_toEndOf="@+id/iv_seatIcon"
                app:layout_constraintTop_toTopOf="@+id/iv_seatIcon"
                app:srcCompat="@drawable/ic_baseline_arrow_forward_ios_24" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="5dp"
                android:layout_height="51dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_checkin"
                app:layout_constraintEnd_toStartOf="@+id/iv_seatIcon"
                app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintStart_toEndOf="@+id/tv_checkin"
                app:layout_constraintTop_toTopOf="@+id/tv_checkin"
                app:layout_constraintVertical_bias="0.52"
                app:srcCompat="@drawable/dotline" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
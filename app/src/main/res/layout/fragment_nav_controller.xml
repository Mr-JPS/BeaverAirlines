<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.beaverairlines.home.NavControllerFragment"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:alpha="0.8"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cloudsbackground3" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/navBackGround"
        android:layout_width="373dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:visibility="invisible"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/bubbleTabBar"
        app:layout_constraintEnd_toEndOf="@+id/menuBttn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bubbleTabBar" />

    <LinearLayout
        android:id="@+id/menuBttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:background="@drawable/ripple_background"
        android:clickable="true"
        app:layout_behavior="com.example.beaverairlines.FabBehaviour"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/bubbleTabBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bubbleTabBar">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/logo2" />

        <TextView
            android:id="@+id/menu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotic"
            android:maxHeight="15dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:text="Menu"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <io.ak1.BubbleTabBar
        android:id="@+id/bubbleTabBar"
        android:layout_width="345dp"
        android:layout_height="62dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="32dp"
        android:background="#00FFFFFF"
        android:elevation="16dp"
        android:padding="7dp"
        android:visibility="invisible"
        app:bubbletab_custom_font="@font/gotic"
        app:bubbletab_disabled_icon_color="#462154"
        app:bubbletab_horizontal_padding="20dp"
        app:bubbletab_icon_padding="5sp"
        app:bubbletab_icon_size="30dp"
        app:bubbletab_menuResource="@menu/menu"
        app:bubbletab_tab_corner_radius="35dp"
        app:bubbletab_title_size="13sp"
        app:bubbletab_vertical_padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </io.ak1.BubbleTabBar>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AD_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#001F2B69">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-90dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toStartOf="@+id/BookFragment_recycler"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clouds" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/gotic"
        android:text="SAVE"
        android:textColor="@color/red_700"
        android:textSize="30dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/BookFragment_recycler"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BookFragment_recycler" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="-8dp"
        android:fontFamily="@font/gotic"
        android:text="and get the exclusive Beaver Visa Card"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:fontFamily="@font/mayabold"
        android:text="15%"
        android:textColor="@color/red_700"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.361"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/BookFragment_recycler"
        android:layout_width="248dp"
        android:layout_height="245dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck"
        tools:itemCount="3"
        tools:listitem="@layout/ad2_item" />

    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        app:srcCompat="@drawable/adcc" />

    <ImageView
        android:id="@+id/imageView41"
        android:layout_width="217dp"
        android:layout_height="153dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toEndOf="@+id/imageView37"
        app:layout_constraintTop_toTopOf="@+id/imageView37"
        app:srcCompat="@drawable/clouds" />

    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="634dp"
        android:layout_height="161dp"
        android:layout_marginTop="344dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BookFragment_recycler"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/adwindows" />

    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="217dp"
        android:layout_height="153dp"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="-24dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView37"
        app:layout_constraintTop_toBottomOf="@+id/imageView42"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/clouds" />
</androidx.constraintlayout.widget.ConstraintLayout>
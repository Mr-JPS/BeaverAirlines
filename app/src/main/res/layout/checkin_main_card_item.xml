<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#008B94C2">

    <androidx.cardview.widget.CardView
        android:id="@+id/checkin_RV_constraint"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:cardBackgroundColor="#DFFFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_checkin_RV_bookingNbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/gotic"
                android:text="BEAVER BOOKING No :   123456789"
                android:textColor="@color/purple_700"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_checkin_RV_windowIcon"
                android:layout_width="45dp"
                android:layout_height="67dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_checkin_RV_bookingNbr"
                app:layout_constraintTop_toBottomOf="@+id/tv_checkin_RV_bookingNbr"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/checkinwindow4" />

            <TextView
                android:id="@+id/tv_checkin_RV_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotic"
                android:text="ECO"
                android:textColor="@color/red_700"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_checkin_RV_windowIcon"
                app:layout_constraintEnd_toEndOf="@+id/iv_checkin_RV_windowIcon"
                app:layout_constraintStart_toStartOf="@+id/iv_checkin_RV_windowIcon"
                app:layout_constraintTop_toTopOf="@+id/iv_checkin_RV_windowIcon" />

            <TextView
                android:id="@+id/tv_checkin_RV_departCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/gotic"
                android:text="Berlin"
                android:textColor="@color/red_700"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_checkin_RV_windowIcon"
                app:layout_constraintStart_toEndOf="@+id/iv_checkin_RV_windowIcon"
                app:layout_constraintTop_toTopOf="@+id/iv_checkin_RV_windowIcon"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/iv_checkin_RV_arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_checkin_RV_departCity"
                app:layout_constraintStart_toEndOf="@+id/tv_checkin_RV_departCity"
                app:layout_constraintTop_toTopOf="@+id/tv_checkin_RV_departCity"
                app:srcCompat="@drawable/ic_round_arrow_right_alt_24" />

            <TextView
                android:id="@+id/tv_checkin_RV_ariCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/gotic"
                android:text="London"
                android:textColor="@color/red_700"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_checkin_RV_departCity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_checkin_RV_arrow1"
                app:layout_constraintTop_toTopOf="@+id/tv_checkin_RV_departCity"
                app:layout_constraintVertical_bias="0.517" />

            <ImageView
                android:id="@+id/iv_checkin_RV_takeoffIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/tv_checkin_RV_departCity"
                app:layout_constraintTop_toBottomOf="@+id/tv_checkin_RV_departCity"
                app:srcCompat="@drawable/ic_round_flight_takeoff_24"
                app:tint="@color/purple_700" />

            <TextView
                android:id="@+id/tv_checkin_RV_takeoffDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/gotic"
                android:text="2022/12/12"
                android:textColor="@color/purple_700"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_checkin_RV_takeoffIcon"
                app:layout_constraintStart_toEndOf="@+id/iv_checkin_RV_takeoffIcon"
                app:layout_constraintTop_toTopOf="@+id/iv_checkin_RV_takeoffIcon" />

            <ImageView
                android:id="@+id/iv_checkin_RV_passengerIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:layout_constraintStart_toStartOf="@+id/iv_checkin_RV_takeoffIcon"
                app:layout_constraintTop_toBottomOf="@+id/iv_checkin_RV_takeoffIcon"
                app:srcCompat="@drawable/ic_baseline_airline_seat_recline_extra_24"
                app:tint="@color/purple_700" />

            <TextView
                android:id="@+id/tv_checkin_RV_passName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/gotic"
                android:text="Luca Beaverhausen"
                android:textColor="@color/purple_700"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_checkin_RV_passengerIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_checkin_RV_passengerIcon"
                app:layout_constraintTop_toTopOf="@+id/iv_checkin_RV_passengerIcon" />

            <TextView
                android:id="@+id/tv_checkin_RV_checkinNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/gotic"
                android:text="CHECK-IN NOW"
                android:textColor="@color/red_700"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_checkin_RV_passName" />

            <ImageButton
                android:id="@+id/bttn_checkin_RV_arrow"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.8"
                android:backgroundTint="#00FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_checkin_RV_checkinNow"
                app:layout_constraintStart_toStartOf="@+id/tv_checkin_RV_checkinNow"
                app:layout_constraintTop_toBottomOf="@+id/tv_checkin_RV_checkinNow"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/arrowdown"
                app:tint="@color/red_700"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/seatAssignment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bttn_checkin_RV_arrow"
                app:layout_constraintVertical_bias="0.0"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_checkin_RV_header"
                    android:layout_width="174dp"
                    android:layout_height="29dp"
                    android:fontFamily="@font/gotic"
                    android:text="BEAVER AIRLINE provides the best flying experience. For this reason our Check-In system assigns you with the best possible seat."
                    android:textAlignment="center"
                    android:textColor="@color/purple_700"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/seatGenerator"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/seatGenerator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="#00FFFFFF"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_checkin_RV_header"
                    app:layout_constraintVertical_bias="0.0">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/checkin_dialog_bg"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/tv_checkin_RV_makeSelc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:fontFamily="@font/gotic"
                            android:text="PLEASE MAKE A SELECTION"
                            android:textColor="@color/red_700"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/bttn_checkin_RV_issueBoardingpass"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.496"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cb_checkin_RV_middle"
                            app:layout_constraintVertical_bias="0.73" />

                        <ImageView
                            android:id="@+id/iv_checkin_RV_aisle"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            app:layout_constraintEnd_toStartOf="@+id/iv_checkin_RV_middle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/iv_checkin_RV_middle"
                            app:srcCompat="@drawable/seat_aisle"
                            app:tint="@color/purple_700" />

                        <TextView
                            android:id="@+id/tv_checkin_RV_aisle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotic"
                            android:text="AISLE"
                            android:textColor="@color/purple_700"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/iv_checkin_RV_aisle"
                            app:layout_constraintStart_toStartOf="@+id/iv_checkin_RV_aisle"
                            app:layout_constraintTop_toBottomOf="@+id/iv_checkin_RV_aisle" />

                        <CheckBox
                            android:id="@+id/cb_checkin_RV_aisle"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="8dp"
                            android:buttonTint="@color/purple_700"
                            android:textColor="@color/red_700"
                            android:textSize="10sp"
                            app:buttonIconTint="@color/red_700"
                            app:layout_constraintEnd_toEndOf="@+id/tv_checkin_RV_aisle"
                            app:layout_constraintStart_toStartOf="@+id/tv_checkin_RV_aisle"
                            app:layout_constraintTop_toBottomOf="@+id/tv_checkin_RV_aisle"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageView
                            android:id="@+id/iv_checkin_RV_middle"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/iseat_middle"
                            app:tint="@color/purple_700" />

                        <TextView
                            android:id="@+id/tv_checkin_RV_middle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotic"
                            android:text="MIDDLE"
                            android:textColor="@color/purple_700"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/iv_checkin_RV_middle"
                            app:layout_constraintStart_toStartOf="@+id/iv_checkin_RV_middle"
                            app:layout_constraintTop_toBottomOf="@+id/iv_checkin_RV_middle" />

                        <CheckBox
                            android:id="@+id/cb_checkin_RV_middle"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="8dp"
                            android:buttonTint="@color/purple_700"
                            android:textColor="@color/red_700"
                            android:textSize="10sp"
                            app:buttonIconTint="@color/red_700"
                            app:layout_constraintEnd_toEndOf="@+id/tv_checkin_RV_middle"
                            app:layout_constraintStart_toStartOf="@+id/tv_checkin_RV_middle"
                            app:layout_constraintTop_toBottomOf="@+id/tv_checkin_RV_middle"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageView
                            android:id="@+id/iv_checkin_RV_window"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_checkin_RV_middle"
                            app:layout_constraintTop_toTopOf="@+id/iv_checkin_RV_middle"
                            app:srcCompat="@drawable/iseat_window"
                            app:tint="@color/purple_700" />

                        <TextView
                            android:id="@+id/tv_checkin_RV_window"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotic"
                            android:text="WINDOW"
                            android:textColor="@color/purple_700"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/iv_checkin_RV_window"
                            app:layout_constraintStart_toStartOf="@+id/iv_checkin_RV_window"
                            app:layout_constraintTop_toBottomOf="@+id/iv_checkin_RV_window" />

                        <CheckBox
                            android:id="@+id/cb_checkin_RV_window"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="8dp"
                            android:buttonTint="@color/purple_700"
                            android:textColor="@color/red_700"
                            android:textSize="10sp"
                            app:buttonIconTint="@color/red_700"
                            app:layout_constraintEnd_toEndOf="@+id/tv_checkin_RV_window"
                            app:layout_constraintStart_toStartOf="@+id/tv_checkin_RV_window"
                            app:layout_constraintTop_toBottomOf="@+id/tv_checkin_RV_window"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageView
                            android:id="@+id/iv_checkin_RV_loading"
                            android:layout_width="60dp"
                            android:layout_height="74dp"
                            android:layout_marginTop="45dp"
                            android:layout_marginBottom="24dp"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/iv_checkin_RV_seatFrame"
                            app:layout_constraintStart_toStartOf="@+id/iv_checkin_RV_seatFrame"
                            app:layout_constraintTop_toBottomOf="@+id/cb_checkin_RV_middle"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/beaverbtn"
                            tools:visibility="gone" />

                        <ImageView
                            android:id="@+id/iv_checkin_RV_seatFrame"
                            android:layout_width="125dp"
                            android:layout_height="140dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="5dp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toTopOf="@+id/bttn_checkin_RV_issueBoardingpass"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cb_checkin_RV_middle"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/checkinwindow2"
                            tools:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_checkin_RV_seatLetter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mayaregular"
                            android:text="C58"
                            android:textColor="@color/red_700"
                            android:textSize="45sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_checkin_RV_seatFrame"
                            app:layout_constraintEnd_toEndOf="@+id/iv_checkin_RV_seatFrame"
                            app:layout_constraintStart_toStartOf="@+id/iv_checkin_RV_seatFrame"
                            app:layout_constraintTop_toTopOf="@+id/iv_checkin_RV_seatFrame"
                            tools:visibility="gone" />

                        <Button
                            android:id="@+id/bttn_checkin_RV_issueBoardingpass"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/purple_700"
                            android:fontFamily="@font/mayaregular"
                            android:text="issue boarding pass"
                            android:textColor="@color/white"
                            android:textSize="8sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:cornerRadius="20dp"
                            app:iconTint="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/cb_checkin_RV_window"
                            app:layout_constraintStart_toStartOf="@+id/cb_checkin_RV_aisle"
                            app:layout_constraintTop_toBottomOf="@+id/iv_checkin_RV_seatFrame"
                            app:strokeColor="@color/white"
                            app:strokeWidth="1dp"
                            tools:ignore="TouchTargetSizeCheck,DuplicateClickableBoundsCheck"
                            tools:visibility="gone" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
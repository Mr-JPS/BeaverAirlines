<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/BP_boardingPassPreviewCard"
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/BP_background"
                android:layout_width="90dp"
                android:layout_height="160dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/newbppreview" />

            <ImageView
                android:id="@+id/BP_logo"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="48dp"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/beaverlogoblue" />

            <TextView
                android:id="@+id/BP_boardingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="11dp"
                android:fontFamily="@font/gotic"
                android:text="15:15"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/BP_destination"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/BP_pasName"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="11dp"
                android:fontFamily="@font/gotic"
                android:text="Beaverhausen\n Lu"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="6sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/BP_destination" />

            <TextView
                android:id="@+id/BP_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/mayaregular"
                android:text="LDN"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/BP_arrow"
                app:layout_constraintTop_toBottomOf="@+id/BP_logo" />

            <ImageView
                android:id="@+id/BP_arrow"
                android:layout_width="19dp"
                android:layout_height="9dp"
                android:layout_marginEnd="-5dp"
                android:rotation="-90"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@+id/BP_destination"
                app:layout_constraintEnd_toEndOf="@+id/BP_boardingTime"
                app:layout_constraintTop_toTopOf="@+id/BP_destination"
                app:srcCompat="@drawable/boardingarrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
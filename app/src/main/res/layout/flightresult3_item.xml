<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/expandCard"
            android:layout_width="361dp"
            android:layout_height="166dp"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            app:cardCornerRadius="13dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/flightresultbackground">

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="230dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="16dp"
                    android:adjustViewBounds="true"
                    android:visibility="visible"
                    app:layout_constraintBottom_toTopOf="@+id/iv_window"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/flightresultplane5" />

                <TextView
                    android:id="@+id/tv_landingTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mayaregular"
                    android:text="17:10"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="35sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_takeoffTime"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_window"
                    app:layout_constraintTop_toTopOf="@+id/tv_takeoffTime"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tv_arrivalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/gotic"
                    android:text="ARRIVAL"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tv_landingTime"
                    app:layout_constraintStart_toStartOf="@+id/tv_landingTime"
                    app:layout_constraintTop_toBottomOf="@+id/tv_landingTime"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tv_arrivalIATA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/gotic"
                    android:text="LHR"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tv_arrivalText"
                    app:layout_constraintStart_toStartOf="@+id/tv_arrivalText"
                    app:layout_constraintTop_toBottomOf="@+id/tv_arrivalText" />

                <TextView
                    android:id="@+id/tv_takeoffTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/mayaregular"
                    android:text="15:05"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="35sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_innerCard"
                    app:layout_constraintEnd_toStartOf="@+id/iv_window"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_window"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tv_departureText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/gotic"
                    android:text="DEPARTURE"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_takeoffTime"
                    app:layout_constraintStart_toStartOf="@+id/tv_takeoffTime"
                    app:layout_constraintTop_toBottomOf="@+id/tv_takeoffTime" />

                <TextView
                    android:id="@+id/tv_departureIATA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/gotic"
                    android:text="BER"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/tv_departureText"
                    app:layout_constraintStart_toStartOf="@+id/tv_departureText"
                    app:layout_constraintTop_toBottomOf="@+id/tv_departureText" />

                <ImageView
                    android:id="@+id/iv_window"
                    android:layout_width="74dp"
                    android:layout_height="102dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:srcCompat="@drawable/flightresultwindow1" />

                <TextView
                    android:id="@+id/tv_classDeclar"
                    android:layout_width="44dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/gotic"
                    android:text="FIRST CLASS"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_window"
                    app:layout_constraintEnd_toEndOf="@+id/iv_window"
                    app:layout_constraintStart_toStartOf="@+id/iv_window"
                    app:layout_constraintTop_toTopOf="@+id/iv_window"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="890dp"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_backgroundBttnSheet"
                    android:layout_width="411dp"
                    android:layout_height="856dp"
                    android:layout_marginTop="35dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/flightresult_dialog_bg" />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_fromCity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_fromCity"
                    app:srcCompat="@drawable/ic_round_flight_takeoff_24"
                    app:tint="@color/purple_700" />

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rotationY="180"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_returnFromCity"
                    app:layout_constraintEnd_toEndOf="@+id/imageView16"
                    app:layout_constraintStart_toStartOf="@+id/imageView16"
                    app:layout_constraintTop_toTopOf="@+id/tv_returnFromCity"
                    app:srcCompat="@drawable/ic_round_flight_takeoff_24"
                    app:tint="@color/purple_700" />

                <TextView
                    android:id="@+id/tv_fromCity"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/mayabold"
                    android:text="Berlin"
                    android:textColor="@color/red_700"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView16"
                    app:layout_constraintTop_toBottomOf="@+id/tv_selectYourFlight" />

                <TextView
                    android:id="@+id/tv_returnFromCity"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:fontFamily="@font/mayabold"
                    android:text="London"
                    android:textColor="@color/red_700"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_fromCity"
                    app:layout_constraintTop_toBottomOf="@+id/tv_fromCity" />

                <TextView
                    android:id="@+id/tv_returnToCity"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/mayabold"
                    android:text="Berlin"
                    android:textColor="@color/red_700"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_returnFromCity"
                    app:layout_constraintStart_toEndOf="@+id/iv_arrowSmall2"
                    app:layout_constraintTop_toTopOf="@+id/tv_returnFromCity" />

                <TextView
                    android:id="@+id/tv_toCity"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/mayabold"
                    android:text="London"
                    android:textColor="@color/red_700"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_fromCity"
                    app:layout_constraintStart_toEndOf="@+id/iv_arrowSmall"
                    app:layout_constraintTop_toTopOf="@+id/tv_fromCity" />

                <TextView
                    android:id="@+id/tv_selectYourFlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotic"
                    android:text="SELECT YOUR FLIGHT FOR"
                    android:textColor="@color/purple_700"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/rv_flightResultsList"
                    app:layout_constraintStart_toStartOf="@+id/tv_fromCity"
                    app:layout_constraintTop_toTopOf="@+id/iv_backgroundBttnSheet"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/iv_arrowSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_fromCity"
                    app:layout_constraintStart_toEndOf="@+id/tv_fromCity"
                    app:layout_constraintTop_toTopOf="@+id/tv_fromCity"
                    app:srcCompat="@drawable/ic_round_arrow_right_alt_24" />

                <ImageView
                    android:id="@+id/iv_arrowSmall2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_returnFromCity"
                    app:layout_constraintStart_toEndOf="@+id/tv_returnFromCity"
                    app:layout_constraintTop_toTopOf="@+id/tv_returnFromCity"
                    app:srcCompat="@drawable/ic_round_arrow_right_alt_24" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_flightResultsList"
                    android:layout_width="409dp"
                    android:layout_height="783dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/iv_backgroundBttnSheet"
                    app:layout_constraintTop_toTopOf="@+id/iv_backgroundBttnSheet"
                    app:layout_constraintVertical_bias="1.0"
                    tools:itemCount="5"
                    tools:listitem="@layout/flightresult_item" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_returnFlightResultsList"
                    android:layout_width="409dp"
                    android:layout_height="783dp"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/iv_backgroundBttnSheet"
                    app:layout_constraintTop_toTopOf="@+id/iv_backgroundBttnSheet"
                    app:layout_constraintVertical_bias="1.0"
                    tools:itemCount="5"
                    tools:listitem="@layout/flightresult_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

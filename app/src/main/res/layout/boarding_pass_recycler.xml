<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003F51B5">

    <TextView
        android:id="@+id/tv_Checkin_services"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/mayabold"
        android:text="Services Aboard"
        android:textColor="@color/red_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_Checkin_services2"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="@+id/cardView2" />

    <TextView
        android:id="@+id/tv_Checkin_services2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/gotic"
        android:text="Discover all additional extras that will make your journey an unforgettable experience"
        android:textColor="@color/white"
        android:textSize="09sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/cardView2"
        app:layout_constraintEnd_toEndOf="@+id/tv_Checkin_services"
        app:layout_constraintStart_toStartOf="@+id/tv_Checkin_services" />

    <ImageView
        android:id="@+id/imageView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_Checkin_services"
        app:layout_constraintStart_toStartOf="@+id/tv_Checkin_services"
        app:srcCompat="@drawable/ic_baseline_auto_awesome_24"
        app:tint="@color/red_700" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="158dp"
        android:layout_height="118dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView38"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/_f4ca4d8132c4e2ebfda4b21dd799465_virgin_australia_east_west_2000_2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView38"
        android:layout_width="278dp"
        android:layout_height="450dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="256dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boardingpasssample" />

    <ImageView
        android:id="@+id/imageView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="196dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clouds" />

    <androidx.cardview.widget.CardView
        android:id="@+id/completeBoardingCard"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="32dp"
        app:cardBackgroundColor="#80FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/BP_recycler_header4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/gotic"
                android:text="NO SAVED BOARDING PASSES AVAILABLE"
                android:textColor="@color/purple_700"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/BP_recycler_header1"
                app:layout_constraintTop_toBottomOf="@+id/BP_recycler_header2"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/BP_recycler_header1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/mayabold"
                android:text="Boarding Passes"
                android:textColor="@color/red_700"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/BP_recycler_header2"
                android:layout_width="219dp"
                android:layout_height="13dp"
                android:layout_marginEnd="80dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/BP_recycler_header1"
                app:srcCompat="@drawable/redline" />

            <ImageView
                android:id="@+id/BP_recycler_header3"
                android:layout_width="24dp"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="-13dp"
                android:rotation="45"
                app:layout_constraintBottom_toBottomOf="@+id/BP_recycler_header2"
                app:layout_constraintEnd_toEndOf="@+id/BP_recycler_header2"
                app:layout_constraintTop_toBottomOf="@+id/BP_recycler_header1"
                app:srcCompat="@drawable/flugzeug2klein" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/BP_recycler"
                android:layout_width="259dp"
                android:layout_height="159dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/BP_recycler_header3"
                app:spanCount="2"
                tools:itemCount="3"
                tools:listitem="@layout/booking_pass_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
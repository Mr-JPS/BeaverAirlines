<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.beaverairlines.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popEnterAnim="@android:anim/fade_in"
            app:popUpTo="@id/splashFragment" />
        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.beaverairlines.onboarding.OnboardingFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_onboarding" >
        <action
            android:id="@+id/action_viewPagerFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popEnterAnim="@anim/slide_right_to_left"
            app:popUpTo="@id/viewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.beaverairlines.auth.AuthWelcomeFragment"
        android:label="AuthFragment" >
        <action
            android:id="@+id/action_authFragment_to_signinFragment"
            app:destination="@id/signinFragment"
            app:popUpTo="@id/authFragment" />
    </fragment>
    <fragment
        android:id="@+id/signinFragment"
        android:name="com.example.beaverairlines.auth.SigninLoginFragment"
        android:label="SigninFragment" >
        <argument
            android:name="isLoginClicked"
            app:argType="boolean" />
        <action
            android:id="@+id/action_signinFragment_to_NavControllerFragment"
            app:destination="@id/NavControllerFragment" />
    </fragment>
    <fragment
        android:id="@+id/NavControllerFragment"
        android:name="com.example.beaverairlines.home.NavControllerFragment"
        android:label="NavControllerFragment" />
</navigation>